    "@emotion/styled": "^11.10.6",
    "@mui/material": "^5.11.15",
    "axios": "^0.26.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "braintree": "^2.21.0",
    "braintree-web": "^3.55.0",
    "braintree-web-drop-in-react": "^1.1.0",
    "concurrently": "^5.3.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.1",
    "express-validator": "^5.3.1",
    "formidable": "^1.2.1",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.24.0",
    "mongoose": "^5.7.6",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
